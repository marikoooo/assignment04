<div class="show-box">
	<div class="show-title">
		<%= @post.title %>
	</div>
	<div class="show-content">
		<%= @post.content %>
	</div>

	<div class="edit-wrap">
		<% if current_user.id == @post.user_id %>
			<%= link_to "edit", edit_post_path, class: "edit-btn" %>
			<%= link_to "delete", post_path, method: :delete, "data-confirm" => "Are you sure you want to delete this post?", class: "edit-btn" %>
		<% end %>
	</div>
</div>

