
  <div class="sign-up-title">
    <h2>Sign up</h2>
  </div>
  <div class="form-wrap">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
   
        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, class: "field-box" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "field-box" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "field-box" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-box" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "submit-btn" %>
        </div>
    <% end %>

      <%= render "users/shared/links" %>
  </div>
